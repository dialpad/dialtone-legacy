{
  "classes": [
    {
      "class": "d-popover",
      "applies": "N/A",
      "description": "Parent popover container."
    },
    {
      "class": "d-popover__dialog",
      "applies": "Child of .d-popover",
      "description": "Base dialog container for popover content. Should be rendered at the body."
    },
    {
      "class": "d-popover__content",
      "applies": "Child of .d-popover__dialog",
      "description": "Contains the main content of the dialog"
    },
    {
      "class": "d-popover__header",
      "applies": "Child of .d-popover__dialog",
      "description": "Contains the header content."
    },
    {
      "class": "d-popover__footer",
      "applies": "Child of .d-popover__dialog",
      "description": "Contains the footer content."
    }
  ],
  "accessible": [
    {
      "item": "aria-expanded=[true|false]",
      "applies": "anchor element",
      "description": "aria-expanded must be set to true when the dialog is opened and false when it is not."
    },
    {
      "item": "aria-controls=[id]",
      "applies": "anchor element",
      "description": "aria-controls must contain the id of the dialog that is opened when it is clicked."
    },
    {
      "item": "aria-haspopup=[role]",
      "applies": "anchor element",
      "description": "must contain the role of popup that it displays."
    },
    {
      "item": "aria-modal=[true|false]",
      "applies": ".d-popover__dialog",
      "description": "true if the dialog is modal, false if not."
    },
    {
      "item": "aria-hidden=[true|false]",
      "applies": ".d-popover__dialog",
      "description": "true if the dialog is currently open, false if not."
    },
    {
      "item": "aria-labelledby=[id]",
      "applies": ".d-popover__dialog",
      "description": "the element labelling the dialog. Should point to the anchor element."
    }
  ]
}
